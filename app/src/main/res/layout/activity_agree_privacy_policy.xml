<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"
    tools:context="com.devlomi.commune.activities.AgreePrivacyPolicyActivity">


    <ImageView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:adjustViewBounds="true"
        android:src="@drawable/a_wel_string" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/aa_app_font_median"
        android:adjustViewBounds="true"
        android:text="Welcome To Commune"
        android:textSize="27dp"
        android:textColor="#000"
        android:src="@drawable/a_wel_string" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:src="@drawable/a_msg_img" />


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="18dp"
        android:padding="1dp"
        android:src="@drawable/a_agreecondition"
        android:text="Continue"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/btn_agree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="53dp"
        android:adjustViewBounds="true"
        android:padding="1dp"
        android:src="@drawable/a_agree_continue"
        android:text="Continue"
        android:textColor="@color/white" />

</LinearLayout>
