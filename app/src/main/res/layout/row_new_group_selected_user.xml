<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="96dp"
    android:layout_height="102dp"
    android:orientation="vertical"
    android:gravity="center">

    <FrameLayout
        android:id="@+id/delete_selected_user_group_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_gravity="center">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img_selected_user_group"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:scaleType="centerCrop"
            android:src="@drawable/user_img_wrapped" />

        <ImageView
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="right"
            android:background="@drawable/rounded_bg1"
            android:padding="3dp"
            app:srcCompat="@drawable/ic_clear" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_selected_user_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_img_selected_user_group"
        android:gravity="center"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/aa_app_font_reguler"
        android:text="John Doe"
        android:textColor="@color/colorText" />


</LinearLayout>